<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1"
        android:background="@android:color/transparent">
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout2"
            android:background="@android:color/transparent">
            <TextView
                android:text="Gasto"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/TxtGasto"
                android:layout_marginLeft="15px"
                android:gravity="center_vertical" />
            <EditText
                android:inputType="textPersonName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/EdtGasto"
                android:layout_marginRight="15px" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayoutteste"
            android:background="@android:color/transparent">
            <TextView
                android:text="Valor"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/TxtValor"
                android:layout_marginLeft="15px"
                android:gravity="center_vertical" />
            <EditText
                android:inputType="textPersonName|number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/EdtValor"
                android:layout_marginRight="15px" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="80.5dp"
        android:id="@+id/linearLayout4">
        <Button
            android:text="Salvar"
            android:layout_width="match_parent"
            android:layout_height="60.5dp"
            android:id="@+id/BtnSalvar"
            android:background="@android:color/darker_gray"
            android:layout_marginRight="15px"
            android:layout_marginLeft="15px"
            android:layout_marginTop="25px" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout3"
        android:background="@color/switch_thumb_normal_material_light"
        android:layout_marginTop="25px"
        android:layout_marginLeft="15px"
        android:layout_marginRight="15px">
        <ListView
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ListaGastos" />
    </LinearLayout>

</LinearLayout>
