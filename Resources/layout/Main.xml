<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/LayoutPrincipal"
    android:gravity="center_vertical"
    android:background="@color/button_material_light">
    <ScrollView
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView1"
        android:layout_marginBottom="190px">
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="384.5dp"
            android:id="@+id/LayoutLogin"
            android:background="@color/switch_thumb_normal_material_light"
            android:layout_margin="10px">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="134.0dp"
                android:id="@+id/LayoutImgLogo"
                android:background="@android:color/transparent">
                <ImageView
                    android:src="@android:drawable/ic_menu_gallery"
                    android:layout_width="match_parent"
                    android:layout_height="122.0dp"
                    android:id="@+id/ImgLogo"
                    android:layout_marginTop="10px" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:layout_width="match_parent"
                android:layout_height="58.0dp"
                android:id="@+id/LayoutUserName"
                android:layout_marginBottom="0.0dp"
                android:background="@android:color/transparent"
                android:layout_marginTop="30px"
                android:minHeight="25px">
                <ImageView
                    android:src="@android:drawable/ic_menu_gallery"
                    android:layout_width="67.5dp"
                    android:layout_height="match_parent"
                    android:id="@+id/ImgUsername" />
                <EditText
                    android:inputType="textPersonName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/EdtUsername"
                    android:layout_marginRight="20px" />
            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="52.5dp"
                android:id="@+id/LayoutPassword"
                android:layout_marginBottom="0.0dp"
                android:background="@android:color/transparent"
                android:layout_marginTop="30px">
                <ImageView
                    android:src="@android:drawable/ic_menu_gallery"
                    android:layout_width="67.5dp"
                    android:layout_height="match_parent"
                    android:id="@+id/ImgPassword" />
                <EditText
                    android:inputType="textPersonName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/EdtPassword"
                    android:layout_marginRight="20px"
                    android:password="true"/>
            </LinearLayout>
            <Button
                android:text="Entrar"
                android:layout_width="match_parent"
                android:layout_height="64.5dp"
                android:id="@+id/BtnLogin"
                android:layout_marginTop="55px"
                android:background="@android:color/darker_gray"
                android:layout_marginRight="20px"
                android:layout_marginLeft="27px" />
        </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="81.5dp"
        android:background="@android:color/darker_gray"
        android:layout_gravity="bottom"
        android:id="@+id/linearLayout1"
        
        >

        <ImageView
            android:layout_gravity="center"
            android:src="@android:drawable/ic_menu_gallery"
            android:layout_width="67.5dp"
            android:layout_height="70dp"
            android:id="@+id/ImgAcesso" 
            />

        <TextView
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:gravity="center"
            android:text="Acesso:"
            android:textColor="@android:color/background_dark"
            android:layout_gravity="center"

            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:gravity="center"
            android:text="0"
            android:layout_gravity="center"
            android:id="@+id/TxtAcesso"
            android:textColor="@android:color/background_dark" 

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:text="Usuario: "
            android:textColor="@android:color/background_dark" 

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="---"
            android:id="@+id/TxtUsuario"
            android:layout_gravity="center"
            android:textColor="@android:color/background_dark" 

            />


    </LinearLayout>
</LinearLayout>